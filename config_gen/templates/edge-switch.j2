!
version 15.2
service timestamps debug datetime msec
service timestamps log datetime msec
no service password-encryption
service compress-config
!
hostname {{ inventory_hostname }}
!
boot-start-marker
boot-end-marker
!
!
!
username cisco privilege 15 password 7 1511021F0725
aaa new-model
!
!
aaa authentication login default local
aaa authorization exec default local
!
!
!
!
!
!
aaa session-id common
clock timezone GMT 1 0
clock summer-time MDT recurring
!
!
!
!
!
vtp mode transparent
!
!
!
no ip domain-lookup
ip domain-name mock-domain.com
no ip cef
no ipv6 cef
!
!
file prompt quiet
archive
 path flash:archive
!
spanning-tree mode pvst
spanning-tree portfast edge bpduguard default
spanning-tree extend system-id
!
vlan internal allocation policy ascending
!
{% for vlan in vlans %}
vlan {{ vlan.vid }}
 name "{{ vlan.name }}"
!
{% endfor %}
lldp run
no cdp run
!
!
!
!
!
!
!
!
!
!
!
!
{% for interface in interfaces %}
interface {{ interface.name }}
  {% if interface.mode %}
    {% if interface.mode.label == 'Access' %}
      {% if interface.untagged_vlan.vid != 1 %}
 switchport access vlan {{ interface.untagged_vlan.vid }}
      {% endif %}
 switchport mode access
 media-type rj45
 negotiation auto
!
    {% elif interface.mode.label == 'Tagged (All)' %}
 switchport trunk encapsulation dot1q
 switchport mode trunk
 media-type rj45
 negotiation auto
!
    {% endif %}
  {% elif interface.ip_addresses %}
    {% for ip in interface.ip_addresses %}
 ip address {{ ip.address | ipaddr('address') }} {{ ip.address | ipaddr('netmask') }}
!
    {% endfor %}
  {% else %}
 shutdown
 media-type rj45
 negotiation auto
!
  {% endif %}
{% endfor %}
no ip classless
no ip forward-protocol nd
!
no ip http server
no ip http secure-server
!
ip ssh version 2
ip scp server enable
!
!
logging host 192.168.13.100
!
!
{% for context in config_context %}
{% for snmp_host in context.snmp_hosts %}
snmp-server host {{ snmp_host }} version 2c readstring 
{% endfor %}
{% endfor %}
!
!
!
control-plane
!
!
line con 0
 privilege level 15
 logging synchronous
 stopbits 1
line aux 0
line vty 0 4
 transport input ssh
line vty 5 15
 transport input ssh
!
{% for context in config_context %}
{% for ntp_server in context.ntp_servers %}
ntp server {{ ntp_server }}
{% endfor %}
{% endfor %}
!
end
